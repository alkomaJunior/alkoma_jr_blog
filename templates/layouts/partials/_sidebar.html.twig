{% set me = "me" %}
{% set message = "messages-index" %}
{% set posts = "posts-index" %}
{% set portfolio = "portfolio-index" %}
{% set logout = "logout" %}

<div class="col-lg-4 pb-5">
    <!-- Account Sidebar-->
    <div class="author-card pb-3">
        <div class="author-card-profile">
            <div class="author-card-avatar"><img src="public/build/img/user-ava.png" alt="Daniel Adams"/>
            </div>
            <div class="author-card-details">
                <h5 class="author-card-name text-lg">{{ user.lastName~" "~user.firstName }}</h5>
            </div>
        </div>
    </div>
    <div class="wizard">
        <nav class="list-group list-group-flush">
            <a class="list-group-item {{ meActiveClass ?? "" }}" href="{{ me }}">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fe-icon-info mr-1 text-muted"></i>
                        <div class="d-inline-block font-weight-medium text-uppercase">Mes informations</div>
                    </div>
                </div>
            </a>
            <a class="list-group-item {{ messageActiveClass ?? "" }}" href="{{ message }}">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fe-icon-message-square mr-1 text-muted"></i>
                        <div class="d-inline-block font-weight-medium text-uppercase">Mes messages</div>
                    </div>
                </div>
            </a>
            <a class="list-group-item {{ postsActiveClass ?? "" }}" href="{{ posts }}">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fe-icon-anchor mr-1 text-muted"></i>
                        <div class="d-inline-block font-weight-medium text-uppercase">Mes Posts</div>
                    </div>
                </div>
            </a>
            <a class="list-group-item {{ portfolioActiveClass ?? "" }}" href="{{ portfolio }}">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fe-icon-pocket mr-1 text-muted"></i>
                        <div class="d-inline-block font-weight-medium text-uppercase">Portfolio</div>
                    </div>
                </div>
            </a>
            <a class="list-group-item" href="{{ logout }}">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fe-icon-log-out mr-1 text-muted"></i>
                        <div class="d-inline-block font-weight-medium text-uppercase">Se d√©connecter</div>
                    </div>
                </div>
            </a>
        </nav>
    </div>
</div>