{% extends 'layouts/base.html.twig' %}

{% set heroBg = "build/img/hero-bg.png" %}

{% block body %}
    {% block header %}{{ include('layouts/partials/_navbar.html.twig') }}{% endblock %}
    <!-- Page Title-->
    {% set home = "me" %}
    {% set portfolio = "portfolio-index" %}
    {% set portfolioShow = "portfolio-show?" %}
    <div class="d-flex p-3" aria-label="Page title" style="margin-top: 5%; margin-bottom: 5%;">
        <div class="container text-left align-self-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ home }}">Mes informations</a></li>
                    <li class="breadcrumb-item"><a href="{{ portfolio }}">Mes posts</a></li>
                    <li class="breadcrumb-item"><a href="{{ portfolioShow~"id="~myPortfolio.id }}">{{ myPortfolio.title }}</a></li>
                </ol>
            </nav>
            <h1 class="page-title-heading"><u>{{ myPortfolio.title }}</u></h1>
        </div>
    </div>
    <!-- Page Content-->
    <div class="container mb-4">
        <div class="row">
            {{ include('layouts/partials/_sidebar.html.twig', {'portfolioActiveClass': 'active'}) }}
            <!-- description -->
            <div class="col-lg-8 pb-5">
                <div class="product-meta"><i class="fe-icon-watch"></i><span>{{ myPortfolio.datePublish|date('Y-m-d Ã  H:i:s') }}</span></div>
                <div class="product-meta"><i class="fe-icon-user"></i><span>{{ myPortfolio.client }}</span></div>
                <div class="ml-5 pl-5 mb-3 pb-3 pt-3 mt-3">
                    <img src="{{ "public/build/img/"~myPortfolio.image~".jpg" }}" alt="Portfolio Thumbnail"/>
                </div>
                <p class="text-muted text-justify">
                    {{ myPortfolio.objective }}
                </p>
                <h2 class="h3 font-weight-bold">{{ myPortfolio.title }}</h2>
                <p class="text-muted text-justify">
                    {{ myPortfolio.description }}
                </p>
            </div>
        </div>
    </div>

    {% block footer %}{{ include('layouts/partials/_footer.html.twig') }}{% endblock %}
{% endblock %}