{% extends 'layouts/base.html.twig' %}

{% set heroBg = "build/img/hero-bg.png" %}

{% block body %}
    {% block header %}{{ include('layouts/partials/_navbar.html.twig') }}{% endblock %}
    <!-- Page Title-->
    {% set home = "me" %}
    {% set message = "messages-index" %}
    {% set messageShow = "messages-show?" %}    <div class="d-flex p-3" aria-label="Page title" style="margin-top: 5%; margin-bottom: 5%;">
    <div class="container text-left align-self-center">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ home }}">Mes informations</a></li>
                <li class="breadcrumb-item"><a href="{{ message }}">Mes messages</a></li>
                <li class="breadcrumb-item"><a href="{{ messageShow~"id="~myMessage.id }}">{{ myMessage.subject }}</a></li>
            </ol>
        </nav>
        <h1 class="page-title-heading"><u>{{ myMessage.subject }}</u></h1>
    </div>
</div>
    <!-- Page Content-->
    <div class="container mb-4">
        <div class="row">
            {{ include('layouts/partials/_sidebar.html.twig', {'messageActiveClass': 'active'}) }}
            <!-- description -->
            <div class="col-lg-8 pb-5">
                <div class="product-meta text-right">
                    <span>{{ myMessage.sendDate|date('Y-m-d H:i:s') }}</span>&nbsp;<i class="fe-icon-watch text-xl"></i><br/>
                    <span>{{ myMessage.emailAddress }}</span>&nbsp;<i class="fe-icon-mail text-xl"></i><br/>
                    <span>{{ myMessage.name }}</span>&nbsp;<i class="fe-icon-user text-xl"></i><br/>
                </div>
                <h2 class="h3 font-weight-bold">Objet : {{ myMessage.subject }}</h2>
                <p class="text-muted text-justify text-lg">
                    <u>Message : </u><br/>
                    {{ myMessage.message }}
                </p>
            </div>
        </div>
    </div>

    {% block footer %}{{ include('layouts/partials/_footer.html.twig') }}{% endblock %}
{% endblock %}