{% extends 'layouts/base.html.twig' %}

{% set heroBg = "build/img/hero-bg.png" %}

{% block body %}
    {% block header %}{{ include('layouts/partials/_navbar.html.twig') }}{% endblock %}
    <!-- Page Title-->
    {% set home = "me" %}
    {% set post = "posts-index" %}
    {% set postEdit = "posts-edit?" %}
    <div class="d-flex p-3" aria-label="Page title" style="margin-top: 5%; margin-bottom: 5%;">
        <div class="container text-left align-self-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ home }}">Mes informations</a></li>
                    <li class="breadcrumb-item"><a href="{{ post }}">Mes posts</a></li>
                    <li class="breadcrumb-item"><a href="{{ postEdit~"id="~post.id }}">Edition d'un post</a></li>
                </ol>
            </nav>
            <h1 class="page-title-heading"><u>Edition d'un post</u></h1>
        </div>
    </div>
    <!-- Page Content-->
    <div class="container mb-4">
        <div class="row">
            {{ include('layouts/partials/_sidebar.html.twig', {'postsActiveClass': 'active'}) }}
            <!-- Add form -->
            <div class="col-lg-8 pb-5">
                {{ include('forms/_postsForm.html.twig') }}
            </div>
        </div>
    </div>

    {% block footer %}{{ include('layouts/partials/_footer.html.twig') }}{% endblock %}
{% endblock %}