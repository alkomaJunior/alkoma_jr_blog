{% extends 'layouts/base.html.twig' %}

{% block body %}
    {% block header %}{{ include('layouts/partials/_navbar.html.twig', {'portfolioActiveClass': 'active'}) }}{% endblock %}
    <!-- Page Title-->
    {% set home = "/alkoma_blog/" %}
        {% set portfolio = "portfolio?page=1" %}
        {% set portfolioSingle = "portfolio-single?" %}
    <div class="d-flex p-3 bg-secondary" aria-label="Page title" style="margin-top: 5%; margin-bottom: 5%;">
        <div class="container text-left align-self-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ home }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ portfolio }}">Portfolio</a></li>
                    <li class="breadcrumb-item"><a href="{{ portfolioSingle~"id="~myPortfolio.id }}">{{ myPortfolio.title }}</a></li>
                </ol>
            </nav>
            <h1 class="page-title-heading"><u>{{ myPortfolio.title }}</u></h1>

            <!-- Page Content-->
            <div class="container pb-5 bg-white mt-5">
                <!-- Project Gallery-->
                <div class="post-meta pb-3">
                    <span class="text-sm ml-0"><i class="fe-icon-clock"></i>{{ comment.datePublish|date('Y-m-d Ã  H:i:s') }}</span>
                </div>
                <div>
                    <img src="#"/>
                </div>
                <!-- Project Details-->
                <div class="row pt-4">
                    <div class="col-lg-4">
                        <div class="widget">
                            <h2 class="widget-title">Client</h2>
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <span class="text-muted">Name:</span>
                                    <span class="font-weight-medium">&nbsp;
                                        {{ myPortfolio.client }}
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="widget">
                            <h2 class="widget-title">Description</h2>
                            <p class="text-muted">
                                {{ myPortfolio.description }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

{% endblock %}