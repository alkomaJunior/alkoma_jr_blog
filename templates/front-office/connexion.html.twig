{% extends 'layouts/base.html.twig' %}

{% set heroBg = "build/img/hero-bg.png" %}

{% block body %}
    {% block header %}{{ include('layouts/partials/_navbar.html.twig', {'connexionActiveClass': 'active'}) }}{% endblock %}
    <!-- Page Title-->
    {% set home = "/alkoma_blog/" %}
    {% set login = "connexion" %}
    <div class="d-flex p-3 bg-secondary" aria-label="Page title" style="margin-top: 5%; margin-bottom: 5%;">
        <div class="container text-left align-self-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ home }}">Accueil</a>
                    </li>
                    <li class="breadcrumb-item"><a href="{{ login }}">Connexion</a>
                    </li>
                </ol>
            </nav>
            <h1 class="page-title-heading"><u>Connexion / Inscription</u></h1>
        </div>
    </div>
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-6 pb-5">
                {{ include('forms/_usersLoginForm.html.twig') }}
            </div>
            <div class="col-md-6 pb-5">
                <h3 class="h4 pb-1">Pas de compte ? Inscrivez-vous</h3>
                <p>L'inscription vous prendra jute une minute.</p>
                {{ include('forms/_usersRegisterForm.html.twig') }}
            </div>
        </div>
    </div>
    {% block footer %}{{ include('layouts/partials/_footer.html.twig') }}{% endblock %}
{% endblock %}