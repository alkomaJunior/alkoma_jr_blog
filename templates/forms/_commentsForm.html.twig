<div class="col-lg-9 col-md-8">
    {{ commentsForm['begin']|raw }}
        <input type="hidden" name="id" value="{{ myPost.id }}">
        <div class="row">
            <div class="col-sm-12 form-group">
                {{ commentsForm['title']|raw }}
            </div>
        </div>
